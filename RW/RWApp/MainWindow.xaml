<Window x:Class="RWApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ToolBar Margin="0,10,0,0" VerticalAlignment="Top">
            <Button Content="Open" ToolTip="Open database" Click="LoadButton_Click"/>
            <Button Content="Save" ToolTip="Save database"/>
            <Button Content="Save As" ToolTip="Save database as"/>
            <Separator/>
            <Button Content="+" ToolTip="Add new character" VerticalAlignment="Top" Click="Button_Click"/>
        </ToolBar>
        <Frame x:Name="Main" Margin="0,42,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
